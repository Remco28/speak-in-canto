# Flask
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=change-me

# SQLite
DATABASE_PATH=instance/speak_in_canto.db

# Google Cloud TTS credentials
# Local dev: path to service account key file
GOOGLE_APPLICATION_CREDENTIALS=secrets/gcp-sa.json
# Coolify/prod: inline JSON secret (leave empty locally)
GCP_SERVICE_ACCOUNT_JSON=

# TTS / resource guardrails
MAX_INPUT_CHARS=12000
TEMP_AUDIO_TTL_HOURS=4
MAX_TEMP_AUDIO_FILES=120
MAX_TEMP_AUDIO_BYTES=314572800
TTS_TIMEOUT_SECONDS=20

# Grok translation
GROK_API_KEY=
GROK_MODEL=grok-4-1-fast-non-reasoning
GROK_BASE_URL=https://api.x.ai/v1
TRANSLATION_TIMEOUT_SECONDS=20
MAX_TRANSLATION_INPUT_CHARS=12000
